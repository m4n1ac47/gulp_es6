// Set any aspect ratio

set($a = 1, $b = 1, $display = unquote('block'), $content = "")
	&:before
		display $display
		content $content
		padding-bottom ($b / $a) * 100%
		{block}

// Get current aspect ratio	

get($img, $display = unquote('block'), $content = "")
	$a = width(unquote($img))
	$b = height(unquote($img))
	$c = strip($b)
	$d = strip($a)
	&:before
		display $display
		content $content
		padding-bottom "calc(%s / %s * 100%)" % ($c $d)
		{block}
		
