/* Add font */

font($font-family, $font-name = $font-family, $font-weight = 'normal', $font-style = 'normal')
  @font-face
    font-family: $font-family
    src: resolve($font-name + '.woff2') format('woff2'), resolve($font-name + '.woff') format('woff')
    font-weight: $font-weight
    font-style: $font-style

/* Media Queries */

min(width)
	@media screen and (min-width: width)
		{block}
		
max(width)
	@media screen and (max-width: width)
		{block}
		
minmax($min-width, $max-width)
	@media screen and (min-width: $min-width) and (max-width: $max-width)
		{block}

/* Set any aspect ratio */

set($a = 1, $b = 1, $display = unquote('block'), $content = "")
	&:before
		display $display
		content $content
		padding-bottom ($b / $a) * 100%
		{block}

/* Get current aspect ratio */

get($img, $display = unquote('block'), $content = "")
	$a = width(unquote($img))
	$b = height(unquote($img))
	$c = strip($b)
	$d = strip($a)
	&:before
		display $display
		content $content
		padding-bottom "calc(%s / %s * 100%)" % ($c $d)
		{block}

/* Create image */

img($img, $bg_size = unquote('cover'))
	background-size $bg_size
	background-position center
	background-repeat no-repeat
	background-image resolve($img)
	width width($img)
	max-width 100%
	get($img)
		
/* Mixins for Before and After */

bef($display = unquote(block), $content = '')
	&:before
		display: $display
		content: $content
		{block}

aft($display = unquote(block), $content = "")
	&:after
		display $display
		content $content
		{block}


/* Reset */

